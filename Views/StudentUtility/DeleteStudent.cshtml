@model List<SchoolBookManagementRecord.Models.Student>

<div class="text-center">
    <br />
    <h2 class="text-danger"> Delete the Student Data</h2>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> ID </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Class </th>
                <th> Remarks </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Id </td>
                    <td> @item.FirstName</td>
                    <td> @item.LastName </td>
                    <td> @item.Class</td>
                    <td> @item.Remarks </td>
                    <td>@Html.ActionLink("Delete", "DeleteStudentData", new { id = item.Id})</td>
                </tr>
            }
        </tbody>
    </table>
</div>