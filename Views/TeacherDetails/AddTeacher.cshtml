@model SchoolBookManagementRecord.Models.Student

<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6" style="padding:23px;">
            <h2 class="text-center text-capitalize">Add Teacher's Data</h2>
            <br />
            @using (Html.BeginForm("CreateTeacherData", "TeacherDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%;">
                        <div class="form-group">
                            <div>@Html.Label("Photo :", new { @class = "control-label" })</div>
                            <input type="file" name="File" />

                        </div>
                    </div>
                    <div style="width: 50%; ">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label" })
                            <input type="date" name="DateOfBirth" />
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%; ">
                        <div class="form-group">
                            @Html.Label("First Name :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Class :", new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Class, new SelectList(Enum.GetValues(typeof(SchoolBookManagementRecord.Models.ClassName))), "Select Class", new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Fathers Name :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Address :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Phone Number :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div style="width:50% ;">
                        <div class="form-group">
                            @Html.Label("Last Name :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Gender :", new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(SchoolBookManagementRecord.Models.GenderType))), "Select Gender", new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Mothers Name :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.MotherName, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Email :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Remarks :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                </div>

                <br />
                <div class="d-flex justify-content-evenly align-items-center">
                    <div style="width: 50%;">
                        <div class="form-group">
                        </div>
                    </div>
                    <div style="width: 50%;display:flex;justify-content:end ">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

