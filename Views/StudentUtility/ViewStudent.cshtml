@model List<SchoolBookManagementRecord.Models.Student>
<br />
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="text-center">
    <br />
    <h2 class="text-danger"> View Student Record </h2>
    <table id="tbJquerytable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> ID </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Father's Name </th>
                <th> Mother's Name </th>
                <th> Class </th>
                <th> Gender </th>
                <th> Address </th>
                <th> Remarks </th>
                <th> Mobile </th>
                <th> File </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Id </td>
                    <td> @item.FirstName</td>
                    <td> @item.LastName </td>
                    <td> @item.FatherName </td>
                    <td> @item.MotherName </td>
                    <td> @item.Class</td>
                    <td> @item.Gender</td>
                    <td> @item.Address</td>
                    <td> @item.Remarks </td>
                    <td> @item.Mobile</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Filepath))
                        {
                            <img src="@Url.Content("~/App_Data/UserImages/" + item.Filepath)" alt="Student Image" style="max-width: 300px; max-height: 300px;" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



